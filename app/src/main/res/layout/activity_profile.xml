<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/home_toolbarid"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:background="#ffbf00"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        
        <ImageView
            android:id="@+id/profile_imageid"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_userimage"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/profile_usernameid"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/profile_imageid"
            android:textSize="20sp"
            android:text="Mehedi Hasan Ridoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="-100dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="0dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#ffbf00"
            android:layout_height="125dp"
            android:layout_weight="1">

            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_userimage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/balance_level"
                    android:layout_centerInParent="true"
                    android:text="$123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:id="@+id/balance_desc"
                    android:layout_below="@id/balance_level"
                    android:text="39"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardElevation="10dp"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            app:cardBackgroundColor="#ffbf00"
            android:layout_height="125dp"
            android:layout_weight="1">

            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_userimage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/books_level"
                    android:layout_centerInParent="true"
                    android:text="$123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:id="@+id/book_desc"
                    android:layout_below="@id/books_level"
                    android:text="Books"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:hint="Full Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/username_id"
            android:text="I am Ridoy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:hint="Phone Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:id="@+id/userphone_id"
            android:text="00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>